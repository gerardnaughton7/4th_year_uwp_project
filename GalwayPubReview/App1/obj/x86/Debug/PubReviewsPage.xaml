<Page
    x:Class="App1.PubReviewsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="tbStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Page.Resources>
    <Grid Background="DarkOrange">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <AutoSuggestBox x:ConnectionId='1' Name="SearchBox" 
                        QueryIcon="Filter" 
                        PlaceholderText="Search by Pub" 
                        HorizontalAlignment="Right" 
                        Grid.Row="0"
                        BorderBrush="black"
                        Background="Orange"
                        Foreground="White"
                        Width="150"
                                                           
                                                                 />
        
        <TextBlock Grid.Row="1"
                   Text="Reviews" 
                   HorizontalAlignment="Center" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="5,0,0,0" 
                   Style="{StaticResource tbStyle}" />
        <TextBlock x:ConnectionId='2' Grid.Row="2" 
                   Visibility="Collapsed" 
                   Name="errorMessage" 
                   Foreground="White" 
                   Text="No pub reviews matching that search. Try again!" 
                   HorizontalAlignment="Center" 
                   Margin="5,0,0,0"  />
        
        <ListBox x:ConnectionId='3' Grid.Row="3" 
                 x:Name="reviewList" 
                 Margin="20,20,20,20" 
                 Background="Orange" 
                 Width="Auto">
            
            <ListBox.ItemTemplate>
                <DataTemplate >
                    <Grid Margin="5,5,5,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Pub}" 
                                   FontWeight="Bold" 
                                   Margin="5,0,0,0" 
                                   Style="{StaticResource tbStyle}" />
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="1" 
                                   Grid.ColumnSpan="2" 
                                   Text="{Binding YourReview}" 
                                   Margin="5,0,0,0" 
                                   Height="Auto" 
                                   Width="auto" 
                                   MaxWidth="450" 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="2" 
                                   Text="Beverage Rating:" 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Grid.Row="2" 
                                   Text="{Binding BevRating}" 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="3" 
                                   Text="Atmosphere Rating: " 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Grid.Row="3" 
                                   Text="{Binding AtmosRating}" 
                                   Style="{StaticResource tbStyle}" />
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="4" 
                                   Text="Craic Rating: " 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Grid.Row="4" 
                                   Text="{Binding CraicRating}" 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="5" 
                                   Text="Review Author: " 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Grid.Row="5" 
                                   TextWrapping="Wrap" 
                                   Text="{Binding Name}" 
                                   Style="{StaticResource tbStyle}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:ConnectionId='4' Grid.Row="2" x:Name="searchList" Margin="20,20,20,20" Background="Orange" Width="Auto" Visibility="Collapsed">
                <ListBox.ItemTemplate>
                    <DataTemplate >
                    <Grid Margin="5,5,5,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Pub}" 
                                   FontWeight="Bold" 
                                   Margin="5,0,0,0" 
                                   Style="{StaticResource tbStyle}" />
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="1" 
                                   Grid.ColumnSpan="2" 
                                   Text="{Binding YourReview}" 
                                   Margin="5,0,0,0" 
                                   Height="Auto" 
                                   Width="auto" 
                                   MaxWidth="450" 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="2" 
                                   Text="Beverage Rating:" 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Grid.Row="2" 
                                   Text="{Binding BevRating}" 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="3" 
                                   Text="Atmosphere Rating: " 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Grid.Row="3" 
                                   Text="{Binding AtmosRating}" 
                                   Style="{StaticResource tbStyle}" />
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="4" 
                                   Text="Craic Rating: " 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Grid.Row="4" 
                                   Text="{Binding CraicRating}" 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="5" 
                                   Text="Review Author: " 
                                   Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Grid.Row="5" 
                                   TextWrapping="Wrap" 
                                   Text="{Binding Name}" 
                                   Style="{StaticResource tbStyle}"/>
                    </Grid>
                </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
    </Grid>
</Page>

