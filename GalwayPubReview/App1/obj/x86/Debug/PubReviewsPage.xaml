<Page
    x:Class="App1.PubReviewsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="tbStyle">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>
    <Grid Background="Blue">

        <ListBox x:ConnectionId='1' x:Name="reviewList" Margin="20,20,20,20" Background="SteelBlue" Width="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate >
                    <Grid Margin="5,5,5,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Pub}" FontWeight="Bold" Margin="5,0,0,0" Style="{StaticResource tbStyle}" />
                        <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding YourReview}" Margin="5,0,0,0" Height="Auto" Width="auto" MaxWidth="450" TextWrapping="Wrap" Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Beverage Rating:" Margin="5,5,0,0" Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding BevRating}" Margin="5,5,0,0" Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" Grid.Row="3" Text="Atmosphere Rating: " Margin="5,5,0,0" Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding AtmosRating}" Margin="5,5,0,0" Style="{StaticResource tbStyle}" />
                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Craic Rating: " Margin="5,5,0,0" Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding CraicRating}" Margin="5,5,0,0" Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="0" Grid.Row="5" Text="Review Author: " Margin="5,5,0,0" Style="{StaticResource tbStyle}"/>
                        <TextBlock Grid.Column="1" Grid.Row="5" TextWrapping="Wrap" Text="{Binding Name}" Margin="5,5,0,0" Style="{StaticResource tbStyle}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>

